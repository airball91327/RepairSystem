<script type="text/javascript">
    $('a[name="del"]').click(function () {
        if (confirm("確定要刪除此記錄?")) {

        }
        else {
            return false;
        }
    });

    $('input[name="chkALL"]').change(function () {
        if ($(this).prop("checked")) {
            $("input[name='chkENG']").each(function () {
                $(this).prop("checked", true);
            });
        }
        else {
            $("input[name='chkENG']").each(function () {
                $(this).prop("checked", false);
            });
        }
    });

    var updURL = '@Url.Action("UpdEngineer", "AssetKeep")';
    /* Transfer Keep Engineers. */
    $("#btnTRANS").click(function () {
        var s = "";
        $("input[name='chkENG']:checked").each(function () {
            s += $(this).parents("tr").children().get(3).innerText.trim();
            s += ";";
        });
        var eng = $("#KeepEngId").val();
        if (s != "" && eng != "") {
            $.ajax({
                url: updURL,
                data: { id: eng, assets: s },
                type: "POST",
                beforeSend: $.Toast.showToast({
                    'title': '作業進行中，請稍待...',
                    'icon': 'loading',
                    'duration': 0
                }),
                success: function (data) {
                    alert('移轉工程師完成!!');
                    $.Toast.hideToast();
                },
                error: function (msg) {
                    alert(msg);
                    $.Toast.hideToast();
                }
            });
        }
    });

    /* Transfer Asset Engineers. */
    $("#btnAssetTRANS").click(function () {
        var s = "";
        $("input[name='chkENG']:checked").each(function () {
            s += $(this).parents("tr").children().get(2).innerText.trim();
            s += ";";
        });
        var eng = $("#AssetEngId").val();
        if (s != "" && eng != "") {
            $.ajax({
                url: '../Asset/UpdEngineer',
                data: { id: eng, assets: s },
                type: "POST",
                beforeSend: $.Toast.showToast({
                    'title': '作業進行中，請稍待...',
                    'icon': 'loading',
                    'duration': 0
                }),
                success: function (data) {
                    alert('移轉工程師完成!!');
                    $.Toast.hideToast();
                },
                error: function (msg) {
                    alert(msg);
                    $.Toast.hideToast();
                }
            });
        }
    });
</script>

