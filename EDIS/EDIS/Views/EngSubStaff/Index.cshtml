@model IEnumerable<EDIS.Models.RepairModels.EngSubStaff>

@{
    Layout = "~/Views/Shared/_PassedLayout.cshtml";
    ViewData["Title"] = "Index";
}

<h2>設定代理人</h2>
<br />
@{
    if (Model.Count() == 0)
    {
        <p>
            <a class="btn btn-primary" asp-action="Create" id="createBtn">新增代理人</a>
        </p>
    }
}

<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.EngId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubUserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubstituteId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                操作
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EngAppUsers.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubAppUsers.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubAppUsers.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.EngId">編輯</a>
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.EngId">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
