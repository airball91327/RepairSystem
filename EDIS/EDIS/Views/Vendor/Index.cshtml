@model EDIS.Models.RepairModels.QryVendor

@{
    Layout = "~/Views/Shared/_PassedLayout.cshtml";
    ViewData["Title"] = "廠商維護";
}

<h2>廠商維護</h2>
<hr />
<form asp-controller="Vendor" asp-action="Index2" asp-area="" data-ajax="true"
      data-ajax-update="#pnlVENDORLIST" data-ajax-method="POST" id="vendorSearchForm"
      data-ajax-begin="$.Toast.showToast({
      'title':'查詢中，請稍待...',
      'icon':'loading',
      'duration':0
      })"
      data-ajax-complete="$.Toast.hideToast()">

    <h4>查詢廠商</h4>

    <div class="container">
        <div class="row">
            <div class=form-inline>
                <div class="form-group">
                    <label for="KeyWord" class="control-title">廠商名稱<br />(關鍵字)</label>
                    <input asp-for="KeyWord" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="UniteNo" class="control-title">廠商統一編號</label>
                    <input asp-for="UniteNo" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class=form-inline>
                <div class="form-group col-md-offset-1 col-md-1">
                    <div>
                        <input id="btnQTY" type="submit" value="查詢" class="btn btn-default btn-group-justified" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<div id="pnlVENDORLIST"></div>