@model X.PagedList.IPagedList<EDIS.Models.Identity.DepartmentModel>

@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Common;
<link href="~/css/PagedList.css" rel="stylesheet" type="text/css" />

<p>
    <a asp-action="Create" class="btn btn-primary">新增部門</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().DptId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Name_C)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Name_E)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Loc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().LastActivityDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DptId)
                </td>
                <td style="max-width: 200px;">
                    @Html.DisplayFor(modelItem => item.Name_C)
                </td>
                <td style="max-width: 300px;">
                    @Html.DisplayFor(modelItem => item.Name_E)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Loc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastActivityDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DptId" class="btn btn-primary">編輯</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.PagedListPager(Model,
    page => Url.Action("Index", "Department", new { Area = "Admin", page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
</div>