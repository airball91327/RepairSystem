@model EDIS.Areas.Admin.Models.QryDocShutVModel
@{
    Layout = "~/Views/Shared/_PassedLayout.cshtml";
    ViewBag.Title = "列表/請修單";
}

<script>
    function ReSubmit() {
        $("#DocQtyForm").submit();
    }
</script>

<style>
    .panel {
        background-color: inherit;
        border-color: white;
    }
    td a {
        color: deepskyblue;
    }
    /* Style the scale of checkbox. */
    input[type=checkbox] {
        -ms-transform: scale(1.5); /* IE */
        -moz-transform: scale(1.5); /* FireFox */
        -webkit-transform: scale(1.5); /* Safari and Chrome */
        -o-transform: scale(1.5); /* Opera */
    }
    .font-normal {
        font-weight: normal;
    }
    .radioPanel {
        padding-top: 5px;
        border: solid 1px;
        height: 100%;
        text-align: center;
    }
</style>

<h2>關帳作業</h2>

<br />

<div class="panel panel-primary">
    <div class="panel-body">
        <form asp-action="Index" asp-controller="DocShut" asp-area="Admin" data-ajax="true" data-ajax-method="POST" id="DocQtyForm"
              data-ajax-update="#pnlDOCLIST"
              data-ajax-begin="$.Toast.showToast({
              'title':'查詢中，請稍待...',
              'icon':'loading',
              'duration':0
              })"
              data-ajax-complete="$.Toast.hideToast()">

            <div class="container">
                <div class="row">
                    <div class="form-inline">
                        <div class="form-group" style="width:313.9px;">
                            <label asp-for="qtyDOCTYPE" class="control-title"></label>
                            <label class="font-normal">
                                <input asp-for="qtyDOCTYPE" type="radio" value="請修" checked />請修
                            </label>
                            <label class="font-normal">
                                <input asp-for="qtyDOCTYPE" type="radio" value="保養" />保養
                            </label>
                        </div>
                        <div class="form-group" style="width:313.9px;">
                            <label asp-for="qtyShutStatus" class="control-title"></label>
                            <label class="font-normal">
                                <input asp-for="qtyShutStatus" type="radio" value="未關帳" checked />未關帳
                            </label>
                            <label class="font-normal">
                                <input asp-for="qtyShutStatus" type="radio" value="已關帳" />已關帳
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-inline">
                        <div class="form-group">
                            <label asp-for="qtyDOCID" class="control-title"></label>
                            <input asp-for="qtyDOCID" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="qtySendDateFrom" class="control-title"></label>
                            <input asp-for="qtySendDateFrom" class="form-control" />
                            <span> ~ </span>
                            <input asp-for="qtySendDateTo" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-inline">
                        <div class="form-group">
                            <label asp-for="qtyShutDate" class="control-title"></label>
                            <input asp-for="qtyShutDate" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="qtyApplyDateFrom" class="control-title"></label>
                            <input asp-for="qtyApplyDateFrom" class="form-control" />
                            <span> ~ </span>
                            <input asp-for="qtyApplyDateTo" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-inline">
                        <div class="form-group">
                            <label asp-for="qtyTICKETNO" class="control-title"></label>
                            <input asp-for="qtyTICKETNO" class="form-control" style="text-transform: uppercase;" />
                        </div>
                        <div class="form-group">
                            <label asp-for="qtyEndDateFrom" class="control-title"></label>
                            <input asp-for="qtyEndDateFrom" class="form-control" />
                            <span> ~ </span>
                            <input asp-for="qtyEndDateTo" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-offset-1 col-md-11">
                        <input id="btnQTY" type="submit" value="查詢" class="btn btn-default" />
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

<div id="pnlDOCLIST" style="margin: 20px 0">

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
