@model IEnumerable<EDIS.Models.RepairModels.FloorEngModel>

@{
    Layout = "~/Views/Shared/_PassedLayout.cshtml";
    ViewData["Title"] = "Index";
}
<link href="~/css/bootstrap-combobox.css" rel="stylesheet" />
<script src="~/js/bootstrap-combobox.js"></script>

<script>
    $(function () {
        $(".combobox").combobox();
    });
</script>

<style>
    .panel {
        background-color: inherit;
        border-color: white;
    }

    form label {
        padding-top: 7px;
        font-size: 120%;
    }
</style>

<h2>查詢與編輯</h2>

<div class="panel panel-primary">
    <div class="panel-body">
        <form asp-action="GetEditList" asp-controller="FloorEng" asp-area="Admin"
              data-ajax="true" data-ajax-update="#floorEngListDiv" data-ajax-method="GET"
              data-ajax-begin="$('#imgLOADING_Engs').show()"
              data-ajax-complete="$('#imgLOADING_Engs').hide()"
              data-ajax-failure="$('#imgLOADING_Engs').hide()">

            <div class="form-inline">
                <div class="form-group col-md-4">
                    <label class="control-label col-md-4">負責人員:</label>
                    <div class="col-md-8">
                        @Html.DropDownList("EngineerId", null, "所有", htmlAttributes: new { @class = "form-control combobox" })
                    </div>
                </div>

                <div class="form-group col-md-4">
                    <label class="control-label col-md-4">樓層:</label>
                    <div class="col-md-8">
                        @Html.DropDownList("BuildingId", null, "所有", htmlAttributes: new { @class = "form-control combobox" })
                    </div>
                </div>

                <div class="form-group col-md-3">
                    <div class="col-md-8">
                        <input type="submit" class="btn btn-primary" id="btnQuery" value="查詢" style="width: 100%" />
                    </div>
                    <img id="imgLOADING_Engs" src="~/Images/opc-ajax-loader.gif" style="display: none" />
                </div>
            </div>
        </form>
    </div>
</div>

<div id="floorEngListDiv"></div>
