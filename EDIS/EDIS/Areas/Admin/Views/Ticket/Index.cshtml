@model EDIS.Models.RepairModels.QryTicketListData
@{
    Layout = "~/Views/Shared/_PassedLayout.cshtml";
    ViewBag.Title = "列表/發票";
}

<script>
    function ReSubmit() {
        $('#btnQTY').click();
    }
</script>

<style>
    .panel {
        background-color: inherit;
        border-color: white;
    }
    td a {
        color: deepskyblue;
    }
</style>

<h2>發票作業</h2>
<br />

<div class="panel panel-primary">
    <div class="panel-body">
        <form asp-action="Index" asp-controller="Ticket" asp-area="Admin" data-ajax="true" data-ajax-method="POST" id="ticketQtyForm"
              data-ajax-update="#pnlTICKETLIST"
              data-ajax-begin="$.Toast.showToast({
              'title':'查詢中，請稍待...',
              'icon':'loading',
              'duration':0
              })"
              data-ajax-complete="$.Toast.hideToast()">

            <div class="container">
                <div class="row">
                    <div class="form-inline">
                        <div class="form-group">
                            <label asp-for="qtyTICKETNO" class="control-title"></label>
                            <input asp-for="qtyTICKETNO" class="form-control" style="text-transform: uppercase;" />
                        </div>
                        <div class="form-group">
                            <label asp-for="qtyVENDORNO" class="control-title"></label>
                            <input asp-for="qtyVENDORNO" class="form-control" type="number" />
                        </div>
                        <div class="form-group">
                            <label asp-for="qtyVENDORNAME" class="control-title"></label>
                            <input asp-for="qtyVENDORNAME" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-inline">
                        <div class="form-group">
                            <label asp-for="qtyDOCID" class="control-title"></label>
                            <input asp-for="qtyDOCID" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="qtyApplyDateFrom" class="control-title"></label>
                            <input asp-for="qtyApplyDateFrom" class="form-control" />
                            <span> ~ </span>
                            <input asp-for="qtyApplyDateTo" class="form-control" />
                        </div>
                        <div class="form-group" style="display: none;">
                            <label asp-for="qtyTICKETSTATUS" class="control-title"></label>
                            <input asp-for="qtyTICKETSTATUS" type="radio" value="未關帳" checked />未關帳
                            <input asp-for="qtyTICKETSTATUS" type="radio" value="已關帳" />已關帳
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-offset-1 col-md-11">
                        <input id="btnQTY" type="submit" value="查詢" class="btn btn-default" />
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

<div id="pnlTICKETLIST" style="margin: 20px 0">

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
