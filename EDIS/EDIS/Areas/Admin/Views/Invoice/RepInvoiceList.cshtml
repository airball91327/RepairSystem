@model IEnumerable<EDIS.Models.RepairModels.RepairCostModel>

<script>
        $(function () {
            //Button to export excel.
            $('#btnExcel').click(function () {
                var s = "";
                var s2 = "";
                $("input[name='chkREP']:checked").each(function () {
                    s += $(this).parents("tr").children().get(10).innerText.trim();
                    s += ";";
                    s2 += $(this).parents("tr").children().get(2).innerText.trim();
                    s2 += ";";
                });
                if (s != "") {
                    $.ajax({
                        url: '@Url.Action("ExportExcelRep", "Invoice", new { Area = "Admin" })',
                        data: { DocIds: s, SeqNos: s2 },
                        type: "GET",
                        beforeSend: $.Toast.showToast({
                            'title': 'Excel產生中，請稍待...',
                            'icon': 'loading',
                            'duration': 0
                        }),
                        success: function (data) {
                            window.location.href = '@Url.Action("ExportExcelRep", "Invoice", new { Area = "Admin" })' + '?DocIds=' + s + '&SeqNos=' + s2;
                            $.Toast.hideToast();
                        },
                        error: function (msg) {
                            alert(msg);
                            $.Toast.hideToast();
                        }
                    });
                }
                else {
                    alert("請至少選擇一張簽單!")
                }
            });

            $('#btnSend').click(function () {
                var s = "";
                var s2 = "";
                $("input[name='chkREP']:checked").each(function () {
                    s += $(this).parents("tr").children().get(10).innerText.trim();
                    s += ";";
                    s2 += $(this).parents("tr").children().get(2).innerText.trim();
                    s2 += ";";
                });
                if (s != "") {
                    var url = '@Url.Action("TransferEdit", "Invoice", new { Area = "Admin" })' + '?DocIds=' + s + '&SeqNos=' + s2;
                    window.location.href = url;
                }
                else {
                    alert("請至少選擇一張簽單!")
                }
            });

            $('input[name="chkALL"]').change(function () {
                if ($(this).prop("checked")) {
                    $("input[name='chkREP']").each(function () {
                        $(this).prop("checked", true);
                    });
                }
                else {
                    $("input[name='chkREP']").each(function () {
                        $(this).prop("checked", false);
                    });
                }
            });
        });
</script>

@if (Model.Count() <= 0)
{
    <p class="text-danger">無任何資料!</p>
}
else
{
    <div class="panel" id="pnlTicket">
        <div class="panel-body">
            <h3>簽單一覽</h3>
            <div class="row">
                <div class="col-md-9">
                    <button class="btn btn-default" id="btnExcel">匯出Excel</button>
                </div>
                <div class="col-md-3" style="text-align:right;">
                    <button class="btn btn-success" id="btnSend">移至轉撥計價畫面</button>
                </div>
            </div>

            <table class="table table-bordered" style="width: 100%;">
                <tr>
                    <th style="min-width: 80px;">
                        <label>@Html.CheckBox("chkALL") 全選</label>
                    </th>
                    <th>
                        簽單號碼
                    </th>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.SeqNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StockType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VendorName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountDate)
                    </th>
                    <th>
                        料號/
                        @Html.DisplayNameFor(model => model.PartName)/
                        規格
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Qty)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalCost)
                    </th>
                    <th>
                        請修單號
                    </th>
                    <th></th>
                </tr>
                @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @{ int test = 1;}
                                @if (test == 1)
                                {
                                    @Html.CheckBox("chkREP")
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(motelItem => item.SignNo)
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.SeqNo)
                            </td>
                            <td>
                                @if (item.StockType == "3")
                                {
                                    @Html.Raw("簽單")
                                }
                                else
                                {
                                    @Html.DisplayFor(modelItem => item.StockType)
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VendorName)
                                <br />
                                @Html.DisplayFor(modelItem => item.VendorUniteNo)
                            </td>
                            <td>
                                @item.AccountDate.Value.ToString("yyyy/MM/dd")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PartNo)
                                <span>/</span>
                                @Html.DisplayFor(modelItem => item.PartName)
                                <span>/</span>
                                @Html.DisplayFor(modelItem => item.Standard)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Qty)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalCost)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DocId)
                            </td>
                            <td style="text-align:center;">
                                <a class="btn btn-primary" href="@Url.Action("RepCostEdit", "Invoice", new { Area = "Admin", docId = item.DocId, seqNo = item.SeqNo })" target="_blank">編輯</a>
                                <a class="btn btn-primary" href="@Url.Action("RepDelete", "Invoice", new { Area = "Admin", docId = item.DocId, seqNo = item.SeqNo })" target="_blank">刪除</a>
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
}
