@model EDIS.Areas.Admin.Models.QryInvoiceVModel

@{
    ViewData["Title"] = "簽單作業";
    Layout = "~/Views/Shared/_PassedLayout.cshtml";
}

<script>
    function ReSubmit() {
        $("#invoiceQtyForm").submit();
    }
</script>

<style>
    .panel {
        background-color: inherit;
        border-color: white;
    }
    td a {
        color: deepskyblue;
    }
    .font-normal {
        font-weight: normal;
    }
</style>

<h2>簽單作業</h2>
<br />

<div class="panel panel-primary">
    <div class="panel-body">
        <form asp-action="Index" asp-controller="Invoice" asp-area="Admin" data-ajax="true" data-ajax-method="POST" id="invoiceQtyForm"
              data-ajax-update="#pnlInvoiceLIST"
              data-ajax-begin="$.Toast.showToast({
              'title':'查詢中，請稍待...',
              'icon':'loading',
              'duration':0
              })"
              data-ajax-complete="$.Toast.hideToast()">

            <div class="container">
                <div class="row">
                    <div class="form-inline">
                        <div class="form-group">
                            <label asp-for="qtySIGNNO" class="control-title"></label>
                            <input asp-for="qtySIGNNO" class="form-control" style="text-transform: uppercase;" />
                        </div>
                        <div class="form-group">
                            <label asp-for="qtyVENDORNO" class="control-title"></label>
                            <input asp-for="qtyVENDORNO" class="form-control" type="number" />
                        </div>
                        <div class="form-group">
                            <label asp-for="qtyVENDORNAME" class="control-title"></label>
                            <input asp-for="qtyVENDORNAME" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-inline">
                        <div class="form-group" style="width:313.9px;">
                            <label asp-for="qtyDOCTYPE" class="control-title"></label>
                            <label class="font-normal">
                                <input asp-for="qtyDOCTYPE" type="radio" value="請修" checked />請修
                            </label>
                            <label class="font-normal">
                                <input asp-for="qtyDOCTYPE" type="radio" value="保養" />保養
                            </label>
                        </div>
                        @*<div class="form-group" style="width:313.9px;">
                            <label asp-for="qtyTICKETSTATUS" class="control-title"></label>
                            <input asp-for="qtyTICKETSTATUS" type="radio" value="未關帳" checked />未關帳
                            <input asp-for="qtyTICKETSTATUS" type="radio" value="已關帳" />已關帳
                        </div>*@
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-offset-1 col-md-11">
                        <input id="btnQTY" type="submit" value="查詢" class="btn btn-default" />
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

<div id="pnlInvoiceLIST" style="margin: 20px 0">

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
