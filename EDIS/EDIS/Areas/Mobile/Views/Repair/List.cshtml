@model IEnumerable<EDIS.Models.RepairModels.RepairListVModel>
@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
@using EDIS.Models.Identity

@inject CustomUserManager UserManager
@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/Mobile/MyMobileTabStyle.css" />

@if (Model.Count() <= 0)
{
    <p class="text-danger">無任何資料!</p>

}
else
{
    <h4>待處理案件</h4>
    @foreach (var item in Model)
    {
        <div class="tab row">
            <button class="col-xs-12" onclick="location.href='@Url.Action("Edit", "Repair", new { area = "Mobile", id = item.DocId, page = 5 })'">

                <div>
                    <h4 class="col-xs-12">
                        @Html.DisplayFor(modelItem => item.DocId)
                    </h4>
                </div>

                <div>
                    <span>@Html.DisplayFor(model => item.ApplyDptName)</span>
                    <span>@Html.DisplayFor(model => item.ApplyDate)</span>
                    <span>@Html.DisplayFor(model => item.AssetName)</span>
                    <span>@Html.DisplayFor(model => item.TroubleDes)</span>
                </div>

            </button>
        </div>
    }
}
